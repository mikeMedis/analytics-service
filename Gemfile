group :production do
	gem 'pg'
	gem 'rails_12factor'
end

group :development do
	gem 'listen'
	gem 'sqlite3'
end

gem 'devise'
gem 'react-rails'
gem 'sass-rails'
gem 'uglifier'
gem 'coffee-rails'
gem 'jquery-rails'
gem 'turbolinks'
gem 'bootstrap'
gem 'figaro'
gem 'pry'

group :development, :test do
	gem 'byebug'
	gem 'web-console'
	gem 'spring'
	gem 'rspec-rails'
	gem 'shoulda'
	gem 'faker'
	gem 'factory_girl_rails'
end
